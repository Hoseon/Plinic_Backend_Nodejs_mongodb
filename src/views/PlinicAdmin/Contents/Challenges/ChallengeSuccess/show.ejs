                                                    <div class="row align-items-center w-75 mb-3">
                                                        <label class="col-md-3 text-left">활성화</label>
                                                        <div class="col-md-9">
                                                            <label class="radio-inline">
                                                                <input type="radio" name="optionsRadiosInline"
                                                                       id="optionsRadiosInline1" value="option1"
                                                                       checked=""
                                                                       required>활성화
                                                            </label>
                                                            <label class="radio-inline">
                                                                <input type="radio" name="optionsRadiosInline"
                                                                       id="optionsRadiosInline2" value="option2"
                                                                       required>비활성화
                                                            </label>
                                                        </div>
                                                    </div>
                                                    <!-- 보상 상품명 -->
                                                    <div class="row border-top p-2">
                                                        <h4>댓글(푸시) (<%=  post.comments?post.comments.length:"0"  %>
                                                            )</h4>
                                                        <%  if(post.comments) {  %>
                                                        <% post.comments.forEach(function(comment){ %>
                                                            <div class="body"><%= comment.body %></div>
                                                            <div class="row p-2 comment">
                                                                <div class="top">
                                                                    <b><%= comment.author.nickname %></b>
                                                                    (<%= post.getFormattedTime(comment.createdAt) %>,
                                                                    <%= post.getFormattedDate(comment.createdAt) %>)
                                                                    <% if(user && user.equals(comment.author._id)) { %>
                                                                    <form class="delete" method="post"
                                                                          action="/challengeSuccess/<%= post._id %>/comments/<%= comment._id %>?_method=delete&<%= urlQuery %>">
                                                                        <button type="button" class="btn btn-warning"
                                                                                onclick="confirm('Your comment will be deleted')?this.parentElement.submit():null;">
                                                                            댓글삭제
                                                                        </button>
                                                                    </form>
                                                                    <% } %>
                                                                </div>

                                                            </div>
                                                            <div class="row border-top p-2"></div>
                                                        <% }) %>
                                                        <% } %>
                                                        <form class="addComment checkValidation"
                                                              action="/challengeSuccess/<%= post._id %>/comments?<%= urlQuery %>"
                                                              method="post">
                                                            <input type="hidden" name="_id" value="<%= post._id %>"/>
                                                            <input type="hidden" name="email" value="<%= post.email %>"/>
