                                                            <input class="form-control" name="post[body]" maxlength="20"
                                                                   placeholder="20자 이내" readonly
                                                                   value="<%= post.phoneNumber %>">
                                                        </div>
                                                    </div>
                                                    <!-- 챌린지 조건 -->
                                                    <div class="row align-items-center w-75 mb-3">
                                                        <label class="col-md-3 text-left">우편번호</label>
                                                        <div class="col-md-9">
                                                            <input class="form-control" name="post[body]" maxlength="20"
                                                                   placeholder="20자 이내" readonly
                                                                   value="<%= post.zonecode %>">
                                                            <!--                                                            <p class="form-control-static">-</p>-->
                                                        </div>
                                                    </div>
                                                    <!-- 참여기간 -->
                                                    <div class="row align-items-center w-75 mb-3">
                                                        <label class="col-md-3 text-left">주소</label>
