                                                            <input type="hidden" name="pushtoken"
                                                                   value="<%= post.pushtoken %>"/>
                                                            <!-- 관리자가 댓글을 작성할시에 푸시 알림이 가도록 설정 -->
                                                            <textarea class="cvRequired" type="text"
                                                                      name="comment[body]"
                                                                      cvRqErrMsg="미션 성공자에게 푸시 알림을 보냅니다."
                                                                      cvRqErrTo="#cvErrTitle" <%= user ? "" : "disabled" %>
          placeholder="<%= user ? "Add comment here" : "로그인 한 후 문의하기 댓글을 작성해주세요.." %>"></textarea>
                                                            <button type="submit" class="btn btn-danger m-2 float-end" <%= user ? "" : "disabled" %>>푸쉬 알람 보내기</button>
