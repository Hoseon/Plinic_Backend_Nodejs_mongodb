                                                        <div class="col-md-9">
                                                            <input class="form-control" name="post[product]"
                                                                   maxlength="20" placeholder="20자 이내" readonly
                                                                   value="<%= post.getFormattedDate(post.createdAt) %>">
                                                            <!--                                                            <p class="form-control-static">-</p>-->
                                                        </div>
                                                    </div>
                                                    <!-- 메인 이미지 업로드 -->
