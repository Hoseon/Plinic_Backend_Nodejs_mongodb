                  <div class="row align-items-center">
                      <label class="col-md-1 text-left">활성화</label>
                      <div class="col-md-11">
                          <label class="radio-inline">
                              <input type="radio" name="post[visible]"
                                  id="optionsRadiosInline1" value=true checked
                                  required>활성화
                          </label>
                          <label class="radio-inline">
                              <input type="radio" name="post[visible]"
                                  id="optionsRadiosInline2" value=false
                                  required>비활성화
                          </label>
                      </div>
                  </div>
                  <div class="row justify-content-end">
                    <button type="reset" class="w-25 m-1 btn btn-default">닫기</button>
                    <button type="submit" class="w-25 m-1 btn btn-primary">저장</button>
